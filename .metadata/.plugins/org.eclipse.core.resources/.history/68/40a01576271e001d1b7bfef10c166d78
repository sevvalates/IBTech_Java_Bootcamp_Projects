package com.godoro.geometry;

public class Rectangle {

	private int width; //field
	private int height;
	
	public Rectangle(int width,int height){ //constructor
		this.width=width;
		this.height=height;
	}
	public Rectangle(){
		this(1,1);
	}

	public int getArea() {  //method
		return width*height;
	}
	public int getPerimeter() {
		return 2*(width+height);
	}

}
